// Colors
$color-yellow = #fff176;
$color-yellow-dark = #fdd835;

// Header
nav ul .switch
	padding: 0px 15px
	label .lever
		background-color: $color-yellow
		&::after
			background-color: $color-yellow-dark

// Application
#insertApplicationForm .progress
	opacity: 0

// Forms
#signature-card
	height: 300px

canvas[name='signature.signature']
	position: absolute
	left: 0
	top: 0
	width: 100%
	height: 100%

// Footer
#footer
	min-height: 5em
