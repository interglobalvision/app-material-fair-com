// Colors
$color-yellow = #fff176;
$color-yellow-dark = #fdd835;

// Basic
html 
  font-family: 'AkkuratPro'
  
body 
  background-image: url(images/shapes_bg.png)
  background-repeat: repeat
  
iframe
  position: absolute // hide that conekta iframe
  
.btn, .btn-large
  margin-bottom: 10px
  
// Type
em
  font-weight: normal
  font-style: italic

strong
  font-weight: bold
  font-style: normal
  
em strong, strong em
  font-weight: bold
  font-style: italic
  
.checkbox 
  margin-bottom: 20px
  h5
    margin-top: 0
    margin-bottom: 0 

// Header
.brand-logo
  font-family: 'Stanley'
  
nav ul .switch
  padding: 0px 15px
  label .lever
    background-color: $color-yellow
    &::after
      background-color: $color-yellow-dark

// Application
#insertApplicationForm .progress
  opacity: 0
.booth-selection [type="checkbox"] + label
  height: 55px

// Forms
#signature-card
  height: 300px
  
.array-section .array-section
  padding-left: 5%
  
.array-btn-container
  display: block
  margin-bottom: 15px
  text-align: right

canvas[name='signature']
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

.upload-form
  margin: 10px 0 15px
  
.image-upload-thumbnail
  max-height: 120px
  width: auto
  display: block
  margin-bottom: 10px

.preloader-wrapper.active
  margin: 0 15px

.terms-and-conditions
  max-height: 300px
  overflow: scroll
  font-size: .8em
  padding: 10px
  border: 1px solid lightgrey
  
.card .card-content p 
  margin-bottom: 10px
  
.booth-size
  padding-left: 35px
  
.help-block
  color: red
  
// Tables
th.tablesorter-header
  cursor: pointer
  &:focus
    outline: 0
  
.tablesorter-headerDesc
  color: #f9a825
  
.tablesorter-headerAsc
  color: #26a69a
  
th.sorter-false
  cursor: default

// Custom materialize
.card
  overflow: visible

// Footer
#footer
  min-height: 5em
